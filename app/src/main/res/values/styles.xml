<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Overwrite action bar styles -->
    <style name="MainToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <!-- Overwrite holo dialog theme to get a simple dialog theme -->
    <style name="MapstopDialogCustom" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth">

        <item name="*android:windowFixedWidthMajor">95%</item>
        <item name="*android:windowFixedWidthMinor">95%</item>
        <item name="*android:windowFixedHeightMajor">85%</item>
        <item name="*android:windowFixedHeightMinor">85%</item>

        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
